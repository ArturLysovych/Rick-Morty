{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2021"],
      "jsx": "react",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/main.jsx"],
    "exclude": ["node_modules"]
}
  